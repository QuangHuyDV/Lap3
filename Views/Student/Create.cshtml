@{
    ViewData["Title"] = "Create Student";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
@model Student
<h1>Create Student</h1>
<div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <form asp-controller="Student" asp-action="Create" method="post" class="mt-3" enctype="multipart/form-data">
        <div style="margin-top: 7px;" class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-from-lable"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" placeholder="Họ tên">
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div style="margin-top: 7px;" class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-from-lable"></label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" placeholder="Email">
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div style="margin-top: 7px;" class="form-group row">
            <label asp-for="Password" class="col-sm-2 col-from-lable"></label>
            <div class="col-sm-10">
                <input asp-for="Password" class="form-control" placeholder="Password">
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div style="margin-top: 7px;" class="form-group row">
            <label asp-for="Branch" class="col-sm-2 col-from-lable"></label>
            <div class="col-sm-10">
                <select asp-for="Branch" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<Branch>()"></select>
            </div>
        </div>
        <div style="margin-top: 7px;" class="form-group row">
            <label asp-for="IsRegular" class="col-sm-2 col-from-lable"></label>
            <div class="col-sm-10">
                <input asp-for="IsRegular" type="checkbox" class="custom-control-input">
            </div>
            <span asp-validation-for="IsRegular" class="text-danger"></span>
        </div>
        <div style="margin-top: 7px;" class="form-group row">
            <label asp-for="DateOfBirth" class="col-sm-2 col-from-lable"></label>
            <div class="col-sm-10">
                <input asp-for="DateOfBirth" class="form-control" placeholder="Họ tên">
            </div>
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>
        <div style="margin-top: 7px;" class="form-group row">
            <label asp-for="Gender" class="col-sm-2 col-from-lable"></label>
            <div class="col-sm-10">
                @foreach (var gender in ViewBag.AllGenders)
                {
                    <label class="redio-inline">
                        <input asp-for="Gender" type="radio" value="@gender" id="Gender@(gender)" />@gender<br />
                    </label>
                }
            </div>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div style="margin-top: 7px;" class="form-group row">
            <label asp-for="Address" class="col-sm-2 col-from-lable"></label>
            <div class="col-sm-10">
                <textarea asp-for="Address" class="form-control" placeholder="Địa chỉ"></textarea>
            </div>
        </div>
        <div style="margin-top: 7px;" class="form-group row">
            <label asp-for="Image" class="col-sm-2 col-from-lable"></label>
            <div class="col-sm-10">
                <input asp-for="Image" name="Image" class="form-control" type="file">
            </div>
        </div>
        <div style="margin-top: 7px;" class="form-group row">
            <label asp-for="Score" class="col-sm-2 col-from-lable"></label>
            <div class="col-sm-10">
                <input asp-for="Score" class="form-control" placeholder="Score">
            </div>
            <span asp-validation-for="Score" class="text-danger"></span>
        </div>
        <div style="margin-top: 7px;" class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </form>
</div>